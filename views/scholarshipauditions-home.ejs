<script>
    function animateCounter(targetCount, duration, elementId) {
      const countElement = document.getElementById(elementId);
      const startCount = parseInt(countElement.textContent);
      const step = Math.ceil(targetCount / (duration * 300)); // Calculate increment per millisecond

      let currentCount = startCount;
      const interval = setInterval(function () {
        currentCount += step;
        countElement.textContent = currentCount.toLocaleString(); // Format with commas

        if (currentCount >= targetCount) {
          clearInterval(interval);
          countElement.textContent = targetCount.toLocaleString(); // Format the final count
        }
      }, 1); // Update every millisecond
    }

    // Example usage for each counter:
    window.addEventListener('load', function () {
      animateCounter(3240000, 5, 'count1'); // Count up to 3,240,000 in 5 seconds on page load
      animateCounter(5480000, 5, 'count2'); // Count up to 5,480,000 in 5 seconds on page load
      animateCounter(215714, 5, 'count3');  // Count up to 215,714 in 5 seconds on page load
      animateCounter(37650, 5, 'count4');   // Count up to 37,650 in 5 seconds on page load
    });
</script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const carousel = document.querySelector('[data-carousel]');
        const slides = document.querySelectorAll('.slide');
        let currentIndex = 0;

        // Define an array of texts corresponding to each image
        const texts = [
            "Dream Big With Us!",
            "Connecting Dreams",
            "Unleashing Opportunities",
            "It's All About You!"
        ];

        // Function to update the text inside the hero-text div
        function updateHeroText(index) {
            const heroText = document.querySelector('.hero-text h1');
            heroText.textContent = texts[index];
        }

        function showSlide(index) {
            slides[currentIndex].removeAttribute('data-active');
            currentIndex = (index + slides.length) % slides.length;
            slides[currentIndex].setAttribute('data-active', '');
            updateHeroText(currentIndex); // Update the text when changing the slide
        }

        function nextSlide() {
            showSlide(currentIndex + 1);
        }

        // Automatically advance the carousel every 4 seconds
        setInterval(nextSlide, 4000);
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll("[data-carousel-button]")

        buttons.forEach(button => {
            button.addEventListener("click", () => {
                const offset = button.dataset.carouselButton === "next" ? 1 : -1
                const slides = button.closest("[data-carousel]").querySelector("[data-slides]")

                const activeSlide = slides.querySelector("[data-active]")
                let newIndex = [...slides.children].indexOf(activeSlide) + offset
                if (newIndex < 0) newIndex = slides.children.length - 1
                if (newIndex >= slides.children.length) newIndex = 0

                slides.children[newIndex].dataset.active = true
                delete activeSlide.dataset.active
                updateHeroText(newIndex); // Update the text when changing the slide
            })
        })
    });
</script>

