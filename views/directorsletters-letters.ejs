<%- include('partials/directorsletters-header') -%>

<div class="main-wrapper">
    <!-- Slider Start -->
    <section class="slider2">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <span class="h6 d-inline-block mb-4 subhead text-uppercase"><span class="text-color">Director Letters</span></span>
                    <h1 class="text-uppercase text-white mb-5">Explore All<br><span class="text-color"> Director</span> Letters</h1>
                </div>
            </div>
        </div>
    </section>
    <!-- Section Slider End -->

    <section class="letters-section">
        <div class="letter-writer-section">
            <h4 class="letter-writer-link">Letters by:</h4>
            <br>
            <div class="letter-writer-link">
                <!-- Modal and content for each category -->
                <!-- ... existing modal code ... -->
            </div>
        </div>

        <div class="letter-type">
            <h1>All Letters</h1>
            <form class="letter-form" action="/directorsletters/letters" method="GET">
                <br>
                <h4>Filter All Letters by letter recipient & letter category dropdowns or both.</h4>
                <input type="text" name="search" placeholder="Search letters" value="<%= searchQuery || '' %>">
                <!-- Filter by letter recipients -->
                <select class="letterselect" name="recipient">
                    <option value="">Letter Recipients</option>
                    <% recipients.forEach(function (recipient) { %>
                        <option value="<%= recipient.recipient_id %>" <%= recipient.recipient_id == recipientFilter ? 'selected' : '' %>>
                            <%= recipient.name %>
                        </option>
                    <% }); %>
                </select>

                <!-- Filter by letter categories -->
                <select class="letterselect" name="category">
                    <option value="">Letter Categories</option>
                    <% categories.sort((a, b) => a.name.localeCompare(b.name)).forEach(function (category) { %>
                      <option value="<%= category.category_id %>" <%= category.category_id == categoryFilter ? 'selected' : '' %>>
                        <%= category.name %>
                      </option>
                    <% }); %>
                </select> 
                <br>
                <br>
                <div class="about-button">
                    <button class="btn btn-main" type="submit">Search</button>
                </div>
            </form>
            <br>
            <br>
            <div class="letters">
                <% if (letters.length > 0) { %>
                    <% letters.forEach(function (letter) { %>
                        <div class="letter">
                            <h1></h1>
                            <h4><%= letter.title %></h4>
                            <a href="/directorsletters/letters/<%= letter.letter_id %>" style="  margin-bottom: 50px;
                                align-self: center;
                                width: 100px;
                                transition-duration: 0.4s;
                                padding: 3px;" class="btn btn-main">View Letter</a>
                            <!-- Add more details based on your letter schema -->
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No letters found.</p>
                <% } %>
            </div>
            <!-- Pagination links -->
            <div class="pagination">
                <% if (page > 1) { %>
                <h4><a href="/directorsletters/letters?page=<%= page - 1 %>&search=<%= searchQuery %>&recipient=<%= recipientFilter %>&category=<%= categoryFilter %>">< Previous</a></h4>
                <% } %>
                <% if (page < totalPages) { %>
                <h4><a href="/directorsletters/letters?page=<%= page + 1 %>&search=<%= searchQuery %>&recipient=<%= recipientFilter %>&category=<%= categoryFilter %>">Next ></a></h4>
                <% } %>
            </div>
        </div>
    </section>
</main>
